  <!-- Lightbox -->
  <div class="lightbox" id="lightbox" role="dialog" aria-modal="true">
    <button id="lb-close" style="position:absolute; top:22px; right:22px; background:transparent; border:none; color:white; font-size:26px">✕</button>
    <img alt="gallery large" id="lb-img">
  </div>

  <script>
    // small helpers
    const $ = s => document.querySelector(s);
    const $$ = s => [...document.querySelectorAll(s)];

    // service filters
    $$('.filter').forEach(btn => btn.addEventListener('click', e => {
      $$('.filter').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      const cat = btn.dataset.cat;
      $$('#services-grid .service').forEach(card => {
        card.style.display = (cat === 'all' || card.dataset.cat === cat) ? '' : 'none';
      });
    }));

    // lightbox gallery
    $$('#gallery-grid img').forEach(img => {
      img.addEventListener('click', e => {
        const lb = $('#lightbox');
        $('#lb-img').src = img.src.replace('q=80&w=800','q=80&w=1400');
        lb.classList.add('open');
        document.body.style.overflow = 'hidden';
      });
    });
    $('#lb-close').addEventListener('click', _ => { $('#lightbox').classList.remove('open'); document.body.style.overflow = ''; });
    $('#lightbox').addEventListener('click', e => { if (e.target.id === 'lightbox') { $('#lightbox').classList.remove('open'); document.body.style.overflow = ''; } });

    // booking form validation (frontend only)
    $('#booking-form').addEventListener('submit', e => {
      e.preventDefault();
      const name = $('#name').value.trim();
      const phone = $('#phone').value.trim();
      const service = $('#service-select').value;
      const date = $('#date').value;
      if(!/^\d{10}$/.test(phone)) { alert('Please enter a valid 10-digit phone number.'); return; }
      if(!service || !date) { alert('Please select a service and date.'); return; }
      // Simulate booking success — in real site, send to server via fetch
      alert('Thanks ' + name + '! Your booking request for ' + service + ' on ' + date + ' has been received. We will confirm shortly.');
      e.target.reset();
    });

    // contact form simple handler
    $('#contact-form').addEventListener('submit', e => {
      e.preventDefault();
      alert('Thanks! We received your message and will reply shortly.');
      e.target.reset();
    });

    // reveal animations on scroll
    const reveal = () => {
      $$('.fade-up').forEach(el => {
        const r = el.getBoundingClientRect();
        if(r.top < window.innerHeight - 60) el.classList.add('show');
      });
    }
    window.addEventListener('scroll', reveal); reveal();

    // mobile menu toggle
    const menuBtn = document.querySelector('.menu-toggle');
    menuBtn.addEventListener('click', () => {
      const nav = document.querySelector('nav');
      const isOpen = nav.style.display === 'flex';
      nav.style.display = isOpen ? '' : 'flex';
      menuBtn.setAttribute('aria-expanded', String(!isOpen));
    });

    // keyboard accessibility: enter opens details (placeholder for future modal)
    $$('#services-grid .service').forEach(s => s.addEventListener('keydown', e => { if(e.key === 'Enter') alert(s.querySelector('h3').innerText + " - " + s.querySelector('.price').innerText + "\n" + s.querySelector('.muted').innerText); }));

  </script>
